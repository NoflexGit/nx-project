{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@common/components": ["libs/components/src/index.ts"],
      "@frontend/components": ["apps/frontend/components/index.ts"],
      "@frontend/layouts": ["apps/frontend/layouts/index.ts"],
      "@frontend/assets/*": ["apps/frontend/assets/*"],
      "@frontend/types": ["apps/frontend/types/index.ts"],
      "@frontend/appolo/*": ["apps/frontend/appolo/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
